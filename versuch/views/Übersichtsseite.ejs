<script>
    document.getElementById('toggle-password').addEventListener('click', function () {
        const passwordField = document.getElementById('login-password');
        const isPasswordVisible = passwordField.type === 'password';

        // Umschalten zwischen "password" und "text"
        passwordField.type = isPasswordVisible ? 'text' : 'password';

        // Icon entsprechend ändern
        this.classList.toggle('fa-eye', !isPasswordVisible);
        this.classList.toggle('fa-eye-slash', isPasswordVisible);
    });

    const modalRegister = document.getElementById("modal-register");
    const modalLogin = document.getElementById("modal-login");
    const overlay = document.getElementById("modal-overlay");

    const openModalRegister = document.getElementById("open-modal-register");
    const closeModalRegister = document.getElementById("close-modal-register");

    const openModalLoginLink = document.getElementById("open-modal-login-link");
    const closeModalLogin = document.getElementById("close-modal-login");
    const openModalRegisterLink = document.getElementById("open-modal-register-link");

    // Öffnen und Schließen des Registrierungsmodals
    openModalRegister.addEventListener("click", () => {
        modalRegister.style.display = "block";
        overlay.style.display = "block";
    });

    closeModalRegister.addEventListener("click", () => {
        modalRegister.style.display = "none";
        overlay.style.display = "none";
    });

    // Öffnen des Login-Modals von Registrierungsmodal aus
    openModalLoginLink.addEventListener("click", () => {
        modalRegister.style.display = "none";
        modalLogin.style.display = "block";
    });

    // Öffnen des Registrierungsmodals von Loginmodal aus
    openModalRegisterLink.addEventListener("click", () => {
        modalLogin.style.display = "none";
        modalRegister.style.display = "block";
    });

    // Schließen des Loginmodals
    closeModalLogin.addEventListener("click", () => {
        modalLogin.style.display = "none";
        overlay.style.display = "none";
    });

    // Schließen aller Modals durch Klicken auf das Overlay
    overlay.addEventListener("click", () => {
        modalRegister.style.display = "none";
        modalLogin.style.display = "none";
        overlay.style.display = "none";
    });
</script>
