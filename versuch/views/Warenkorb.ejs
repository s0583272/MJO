<header>
    <!-- Startseite Icon -->
    <a href="/" style="text-decoration: none; display: flex; align-items: center; margin-left: 20px;">
        <i class="fas fa-home" style="font-size: 24px; color: #cccccc;"></i>
    </a>
    <!-- Titel -->
    <div class="banner">
        <h1>MJO's Warenkorb</h1>
    </div>
    <!-- Zum Warenkorb -Button -->
    <nav class="cart-header">
        <div class="cart-info">
            <span class="cart-count">Artikel: <span id="item-count">0</span></span>
            <span class="cart-total">Gesamt: <span id="total-price">0.00 €</span></span>
        </div>
    </nav>

    <!-- Zum Shop Icon -->
    <a href="/OnlineShop" style="text-decoration: none;">
        <i class="fas fa-shopping-bag" style="font-size: 24px; color: #FFD700;"></i>
    </a>
</header>

<body>
<div id="cart-container" class="shop-container">
</div>
<div id="cart-items">
    <h1>MJO GAMESCOM </h1>
</div>
